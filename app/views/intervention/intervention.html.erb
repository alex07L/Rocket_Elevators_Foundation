		<section class="container">
			<div class="row ">
				<div class="col-sm d-flex justify-content-center align-items-center">
					<h1>Resquest a intervention</h1>
				</div>
			</div>
			<%= form_tag intervention_path, :class=> 'col-center' do %>
					<div class="col-4">

						<div class="form-row">
							<div class="col-sm">
								<label for="customer">Customer List</label>
								<select class="form-control" id="customer" name="customer">
									<option value="select">Select</option>
									<% Customer.all.each do |c| %>
										<option value="<%= c.id %>"><%= c.nameContact%></option>
									<% end %>
								</select>
							</div>
						</div>
						<div class="form-row next-step1" style="display:none;">
							<div class="col-sm">
								<label for="building">Building List</label>
								<select class="form-control" id="building" name="building">
									<option value="select">Select</option>
								</select>
							</div>
						</div>
						<div class="form-row next-step2" style="display:none;">
							<div class="col-sm">
								<label for="battery">Batterie List</label>
								<select class="form-control" id="battery" name="battery">
									<option value="select">Select</option>
								</select>
							</div>
						</div>
						<div class="form-row next-step3" style="display:none;">
							<div class="col-sm">
								<label for="column">Column List</label>
								<select class="form-control" id="column" name="column">
									<option value="select">Select</option>
								</select>
							</div>
						</div>
						<div class="form-row next-step4" style="display:none;">
							<div class="col-sm">
								<label for="elevator">Elevator List</label>
								<select class="form-control" id="elevator" name="elevator">
									<option value="select">Select</option>
								</select>
							</div>
						</div>
						<div class="form-row">
							<div class="col-sm">
								<label for="employee">Employee List</label>
								<select class="form-control" id="employee" name="employee">
									<% Employee.all.each do |e| %>
										<option value="<%= e.id %>"><%= e.firstName%></option>
									<% end %>
								</select>
							</div>
						</div>
						</div>
						<div class="form-row" >
							<div class="col-sm">
								<label for="description">Description List</label>
								<textarea class="form-control" rows="5" id="description" name="description"></textarea>
							</div>
						</div>
					
					<%= submit_tag "Submit", :class => "btn btn-default"%>
					</div>
				
		<% end%>

		</section>


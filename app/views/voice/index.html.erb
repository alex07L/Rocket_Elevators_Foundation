			<div class="row">
				<%= form_tag profile_path, multipart: true do %>
								<fieldset>
									<div class="row">
											<div class="col-md-12">
												<label for="fullName">Full Name:</label>
												<!-- custom file upload -->
												<input class="form-control" type="text" name="fullName" id="fullName"  />

											</div>
									</div>

								</fieldset>

								<div class="row">
									<div class="col-md-12">
										<button type="submit" class="btn blue"><i class="fa fa-check"></i> CREATE PROFIL</button>
									</div>
								</div>
							<% end %>

			</div>
			
			<div class="row ">

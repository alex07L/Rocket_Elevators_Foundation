					<h1>Enrollement</h1>
				</div>
			</div>
			<div class="row">
				<%= form_tag train_path, multipart: true do %>
								<fieldset>
									<div class="row">
									<div class="col-md-12">
										<select id="profil" name="profil">									
										<% Profil.all.each do |c| %>
										<option value="<%= c.voice %>"><%= c.fullName%></option>
									<% end %>
										</select>
									</div>
												
											<div class="col-md-12">
												<label for="contact:attachment">File Attachment</label>
												<!-- custom file upload -->
												<input class="custom-file-upload" type="file" name="audio_file" id="audio_file"  data-btn-text="Select a File" />
